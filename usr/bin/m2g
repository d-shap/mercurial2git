#!/bin/bash
docker run \
    --rm \
    --name mercurial2git \
    -it \
    -e HG_REPO_URL='http://localhost/mercurial/repository' \
    -e GIT_REPO_URL='https://user:password@github.com/user/repository.git' \
    -e HG_BRANCH_NAME_1='default' \
    -e GIT_BRANCH_NAME_1='master' \
        mercurial2git
